# vim: set ft=zsh:

#########
# Zplug #
#########

# Init
export ZPLUG_HOME=/usr/local/opt/zplug
source_file $ZPLUG_HOME/init.zsh

# Plugins
local plugin_loc=$DOTFILES/zsh.d/zplug.plugins
ZPLUG_LOADFILE=$plugin_loc
source_file $plugin_loc

# Install plugins
if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    else
        echo
    fi
fi

# Load plugins
zplug load
